        border-collapse: collapse;
        font-family: Calibri, sans-serif;
    }

    .sudoku2 td {
        border: solid thin;
        height: 1.4em;
        width: 1.4em;
        text-align: center;
        padding: 0;
    }

    .thick-right-border {
        border: 3px solid black;
        border-right: 3px solid #333 !important;
    }

    .thick-bottom-border {
        border: 3px solid black;
        border-bottom: 3px solid #333 !important;
